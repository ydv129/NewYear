<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form text-white p-10">
            <form action="/create" method="post">
                <input name="title" class=" w-full rounded-md outline-none block px-3 py-2 bg-zinc-800" type="text" placeholder="title goes here">
                <textarea name="details" class=" w-full rounded-md outline-none block px-3 py-2 bg-zinc-800 resize-none mt-3" placeholder="input notes here"></textarea>
                <input class="mt-3 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Note">
            </form>
        </div>

        <div class="tasks p-10 flex gap-4 flex-wrap">
            <% if(files.length > 0 )  { %>
                <% files.forEach(val => { %>
                 
            <div class="task  min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
                <h1 class=" text-white text-3xl tracking-tighter"><%= val %></h1>
                <div class="flex w-full justify-between items-center mt-3">
                    <a class="text-blue-600 inline-block  " href="/files/<%= val %>">Read More.</a>
                    <a class="text-zinc-600" href="/edit/<%= val %>">Edit Filename</a>
                </div>
            </div>

            <% }) %>
        <% } else { %>

            <h3 class="text-zinc-600">No Task yet</h3>

        <%  } %>
                      
        </div>
    </div>
</body>
</html>